# Preview-friendly defaults for CRA dev server
# Copy this file to .env to apply locally or ensure your preview environment sets these.

# Bind to all interfaces so the preview can reach the server
HOST=0.0.0.0

# CRA/webpack-dev-server host check bypass for ingress/proxy previews
DANGEROUSLY_DISABLE_HOST_CHECK=true

# Frontend and Backend URLs for the preview environment (adjust if needed)
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_API_BASE=http://localhost:3001
REACT_APP_BACKEND_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001/ws

# Optional flags
REACT_APP_NODE_ENV=development
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false
